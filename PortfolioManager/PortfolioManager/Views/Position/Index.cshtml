@model IEnumerable<PortfolioManager.Models.POSITION>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PositionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BOND.Issuer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EQUITY.Symbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FUTURE.FutureId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PORTFOLIO.PortfolioName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PositionType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BOND.Issuer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EQUITY.Symbol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FUTURE.FutureId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PORTFOLIO.PortfolioName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PositionId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.PositionId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PositionId })
                </td>
            </tr>
        }

    </table>
</div>